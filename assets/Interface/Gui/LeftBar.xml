<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
	<screen id="start" controller="nl.ttmo.engine.client.gui.niftygui.LeftBarController">
		<layer id="layer" backgroundColor="#0000" childLayout="center">
			<panel id="panel" height="100%" width="15%" align="left" valign="center" backgroundColor="#FFF8" childLayout="vertical" visibleToMouse="true">
				<panel id="scorePanel" height="10%" width="100%" childLayout="center" backgroundColor="#CCC8">
					<control name="label" id="scoreLabel" text="Score: 0" width="100%" color="#000" font="${CALL.getFont()}" align="center" valign="center"/>
				</panel>
				<panel id="resourcesPanel" height="*" width="100%" childLayout="vertical">
					<control name="listBox" id="resourcesListBox" displayItems="28" selectionMode="Disabled" vertical="optional" horizontal="off" viewConverterClass="nl.ttmo.engine.client.gui.niftygui.listBox.ResourceListBoxViewConverter">
						<control name="TTMOResourceEntry"/>
					</control>
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>
